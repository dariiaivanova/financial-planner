<Window x:Class="finplanner.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlanMe - Main" Height="525" Width="750" TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">
    <Window.Background>
        <ImageBrush Opacity="0.45">
            <ImageBrush.ImageSource>
                <BitmapImage UriSource="FY58O0P400.jpg"/>
            </ImageBrush.ImageSource>
        </ImageBrush>
    </Window.Background>
    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"  >
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Plan Me" VerticalAlignment="Top" Foreground="White" FontSize="72"  TextAlignment="Center" Margin="0,0,0,15"  />
            <TextBlock Text="Lorem ipsum dolor sit amet." Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10" FontSize="16" />
            <Button Style="{DynamicResource MaterialDesignRaisedButton}" Content="Log in" FontSize="18" Margin="0,15,0,0" />
            <DockPanel Margin="0,10,0,0">
                <Button Style="{DynamicResource MaterialDesignRaisedLightButton}" Content="Register" Width="140" />
                <Button Style="{DynamicResource MaterialDesignRaisedLightButton}" Content="Forgot password" Width="140" Margin="5,0,0,0"   />
            </DockPanel>
            </StackPanel>
    </Grid>
</Window>
